@page "/card"
@using ShoppingList.Data



<div class="shoppingCard" >
	<h1>
		Shopping List
	</h1>
	<form @onsubmit=AddItem>
		<div class="inputField">
			<i id="quill" class="fa-solid fa-feather-pointed fa-2x"></i>
			<input type="text" placeholder="what do you need?"  @bind="newItem" autofocus  />
			<button class="delBtn"><i class="fa fa-times fa-2x"></i></button>
		</div>
	</form>
	<div >
		<ul class="list">
			@foreach (var item in items)
			{
				<li class="itemRow">
					<p class="item">@item.Item</p>
					<p class="del"><button class="delBtn"><i class="fa fa-times fa-2x"></i></button></p>
				</li>
			}
		</ul
	</div>
</div>



@code
{
	List<ShoppingListItem> items = new List<ShoppingListItem>();
	string? newItem;

	void AddItem()
	{
		if (string.IsNullOrWhiteSpace(newItem))
			return;

		items.Add(new ShoppingListItem
		{
			Item = newItem
		});

		newItem = string.Empty;
	}
}